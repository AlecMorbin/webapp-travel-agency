@model Package

<div class="container mt-5 pb-2 rounded">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Modifica Pizza</h1>
            </div>
            <form asp-controller="Agenzia" asp-action="Update" asp-route-id="Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine</strong>
                    <input asp-for="Image" class="d-block w-100"/>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Nome</strong>
                    <input asp-for="Name" class="d-block w-100"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Destinazione</strong>
                    <input asp-for="Destination" class="d-block w-100"/>
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione</strong>
                    <tetxarea asp-for="Description" class="d-block w-100"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Durata</strong>
                    <input asp-for="Duration" class="d-block w-100"/>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <strong>Prezzo</strong>
                    <input asp-for="Price" class="d-block w-100"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" class="btn btn-small btn-success " value="Salva" />
                </div>
            </form>
        </div>
    </div>
</div>