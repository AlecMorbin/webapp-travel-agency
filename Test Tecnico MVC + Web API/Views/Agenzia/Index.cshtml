@model List<PacchettoViaggio>

@if (Model.Count()==0)
{
    <p>
        <h4>Non ci sono pacchetti viaggio</h4>
    </p>
}
    
    <div class="container text-center mt-5">
        <h1 class="display-5 fw-normal">Our amazing tours</h1>
        <div class="mb-4 ">
            <p class="font-description text-muted">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sit iusto enim ad ea. <br> Expedita, magni illo. Harum dolor, corrupti placeat a velit ipsam repellendus recusandae sit! Obcaecati repellendus sit blanditiis!</p>
        </div>
    </div>
    <div class="container-fluid text-center">
        <div class="row mt-5">
            @foreach(PacchettoViaggio pacchetto in Model)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <img src="@pacchetto.Image" alt="" class="img-fluid">
                        <div class="bg-success text-light fs-5 text-uppercase pt-1 pb-1 card-title">@pacchetto.Name</div>
                        <div class="pt-2 ps-2 pe-2">
                            <p class="text-muted font-description">@pacchetto.Descrizione</p>   
                        </div>             
                            <hr>
                            <div class="text-warning font-description2" style="margin-top: -10px !important;  margin-bottom: 10px !important;">@pacchetto.Durata giorni</div>
                            <p class="font-description"><span class="fw-bold">@pacchetto.Prezzo &euro;</span><span class="text-muted">/person</span></p>
                    </div>
                </div>
            }
        </div>
    </div>