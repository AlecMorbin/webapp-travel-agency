@model List<Package>

@if (Model.Count()==0) 
{
    <h4>Non ci sono pacchetti viaggio</h4>
}

<div class="container text-center mt-5">
  <h1 class="display-5 fw-normal">Lista dei Tour</h1>
  <div class="mb-4"></div>
</div>
<div class="container-fluid ">
    <a class="btn btn-primary" href="@Url.Action("Create","Agenzia")">Crea nuova entry</a>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Immagine</th>
      <th scope="col">Nome</th>
      <th scope="col">Destinazione</th>
      <th scope="col">Descrizione</th>
      <th scope="col">Prezzo</th>
      <th scope="col">Funzioni</th>
    </tr>
  </thead>
  <tbody>
    @foreach(Package pacchetto in Model) 
    {
        <tr>
          <th scope="row">@pacchetto.Id</th>
          <td><img src="@pacchetto.Image" alt="@pacchetto.Name" class="img-fluid"></td>
          <td>@pacchetto.Name</td>
          <td>@pacchetto.Destination</td>
          <td>@pacchetto.Description</td>
          <td>@pacchetto.Price &euro;</td>
          <td><a class="btn btn-info btn-sm" href="@Url.Action("Details","Agenzia",new{ id = pacchetto.Id})">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
              </a>
              <a class="btn btn-warning btn-sm " href="@Url.Action("Update", "Agenzia", new { id = pacchetto.Id })">
                 <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
              </a>
              <a>
                <form class="d-inline " action="@Url.Action("Delete", "Agenzia", new {id= pacchetto.Id})" method="post">
                @Html.AntiForgeryToken()
                <button class="btn btn-danger btn-sm" type="submit" >
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                </button>
                </form>
              </a>    
          </td>
        </tr>
    }
  </tbody>
</table>
</div>