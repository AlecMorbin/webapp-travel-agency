@model PackageMessage

<div class="container rounded bg-light mt-5 text-center">
  <div class="row">
    <div class="col-md-12 mb-3 mt-2">
      <div>
        <span class="mb-3 mt-3 fs-1"><strong>Informazioni</strong></span>
      </div>
      <div class="fs-4">
        <div id="Image" class="mb-1"><img src="@Model.Package.Image" alt="@Model.Package.Name"></div>
        <div class="mb-1">
          <strong>Nome:</strong> @Model.Package.Name
          <div class="mb-1">
            <strong>Destinazione:</strong> @Model.Package.Destination
          </div>
          <div class="mb-1">
            <strong>Descrizione:</strong> @Model.Package.Description
          </div>
          <div class="mb-1">
            <strong>Durata:</strong> @Model.Package.Duration giorni
          </div>
          <div class="mb-1">
            <strong>Prezzo:</strong> @Model.Package.Price € /Persona
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5">
        <h1>Messaggi dagli utenti</h1>
      <div class="col-md-12 mb-3 mt-2">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Cognome</th>
              <th scope="col">Messaggio</th>
              <th scope="col">Data</th>
            </tr>
          </thead>
          <tbody>
              @foreach(MessageOb message in Model.Messages){
                <tr>
                  <th scope="row">1</th>
                  <td>@message.Name</td>
                  <td>@message.Surname</td>
                  <td>@message.Message</td>
                  <td>@message.DateTime</td>
                </tr>
              }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>